extends base


block content 
    div.upload__container
        div.upload__video
            video#preview
            button#startBtn.social__btn Start Recording
        form(method="POST", enctype="multipart/form-data")
            label(for="video") Video File
            input(type="file", accept="video/*", required, id="video", name="video")
            label(for="thumb") Thumbnail File
            input(type="file", accept="image/*", required, id="thumb", name="thumb")
            input(placeholder="Title", type="text", name="title", required, min=4)
            input(placeholder="Description", type="text", name="description", required, min=6)
            input(placeholder="hashtags split by comma", type="text", name="hashtags")
            input(type="submit", value="Upload")
block scripts 
    script(src="/static/js/recorder.js")